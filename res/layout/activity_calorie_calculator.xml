<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/track"
    tools:context=".CalorieCalculator" >


    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/radio0" >

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>
    
        <EditText
        android:id="@+id/heartratetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weighttxt"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Enter Heartrate"
        android:inputType="number" />

    <EditText
        android:id="@+id/weighttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/agetxt"
        android:layout_below="@+id/heartratetxt"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Enter Weight"
        android:inputType="number" />

    <EditText
        android:id="@+id/agetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/milestxt"
        android:layout_below="@+id/weighttxt"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Age"
        android:inputType="number" />

    <EditText
        android:id="@+id/milestxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timetxt"
        android:layout_below="@+id/agetxt"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Enter Miles Ran"
        android:inputType="number" />

    <EditText
        android:id="@+id/timetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/milestxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Enter Minutes Ran"
        android:inputType="number" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timetxt"
        android:layout_centerHorizontal="true"
        android:onClick="showR"
        android:text="Calculate!" />


</RelativeLayout>